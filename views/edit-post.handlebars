<div class="row mb-4 project">
  <div class="col-md-6">
    <h2>
      {{posts.title}}
    </h2>
    <p>
      {{posts.date_created}}
      {{posts.content}}
    </p>
    
    <form class="comment-form">
      <h2>Add a Comment</h2>
      <textarea name="content"></textarea>
      <button class="add-comment" type="submit">Submit</button>
    </form>
    <button type="submit">Submit Changes</button>
    <button type="button" class="delete-post">Delete Post</button>
  </div>
</div>

<script src="/js/edit-post.js"></script>
<script src="/js/add-comment.js"></script>
<script src="/js/delete-post.js"></script>
