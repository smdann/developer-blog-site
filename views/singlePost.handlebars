
<div class="row mb-4 project">
  <div class="col-md-6">
    <h2>
      {{posts.title}}
    </h2>
    <p>
      {{posts.date_created}}
      {{posts.content}}
    </p>
    {{#if loggedIn}}
    <form class="comment-form">
      <h2>Add a Comment</h2>
      <textarea name="content"></textarea>
      <button class="add-comment" type="submit">Submit</button>
    </form>
    {{/if}}
  </div>
</div>

{{#if loggedIn}}
<script src="/js/add-comment.js"></script>
{{/if}}