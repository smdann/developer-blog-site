
{{#each dbPostData as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      {{post.title}}
    </h2>
    <p>Written by: User ID {{post.user_id}}</p>
    <p>
      {{format_date post.date_created}}
      </p>
    <p>
      {{post.content}}
    </p>
    <div class="post link">
      <a id="readMore" href="/post/{{id}}">Read More</a>
    </div>
  </div>
  <div class="col-md-7">
    <p>
      
    </p>
  </div>
</div>
{{/each}}

