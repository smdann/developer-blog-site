{{!-- display all of user's posts
have a button to create a new post and a button to edit existing posts
edit button will be connected to the post id --}}

{{!-- <section class="create-post text-center">
  <button type="submit" class="btn" id="create-post">Create a Post</button>
</section> --}}

<div class="card text-center">
  <h2>Create a New Post</h2>
  <form class="card-body" id="create-post">
    <input type="hidden" name="post-id" value="{{post.id}}"/>
    <div>
      <label class="form-label">Title:</label>
      <input class="form-input" type="text" name="post-title"/>
    </div>
    <div>
      <label class="form-label">Post Content:</label>
      <textarea class="form-input" type="textarea" name="post-content"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
</div>

{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      {{post.title}}
    </h2>
    <p>
      {{post.date_created}}
      </p>
    <p>
      {{post.content}}
    </p>
  </div>
  <div class="col-md-7">
    <div>
      <a href="/dashboard/edit/{{post.id}}"><button class="edit-post"></button>Edit Post</a>
    </div>
  </div>
</div>
{{/each}}

<script src="/js/create-post.js"></script>