<div class="card text-center">
  <h2>Create a New Post</h2>
  <form class="card-body" id="create-post">
    <input type="hidden" name="post-id" value="{{post.id}}"/>
    <div>
      <label class="form-label">Title:</label>
    </div>
    <div>
      <input class="form-input" type="text" name="post-title"/>
    </div>
    <div>
      <label class="form-label">Post Content:</label>
    </div>
    <div>
      <textarea class="form-input" type="textarea" name="post-content"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
</div>

{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      {{post.title}}
    </h2>
    <p>
      {{format_date post.date_created}}
    </p>
    <p>
      {{post.content}}
    </p>
  </div>
  <div class="col-md-7">
    <div>
      <a href="/dashboard/edit/{{post.id}}" class="edit-post">Edit Post</a>
      <a href="/dashboard/edit/{{post.id}}" class="delete-post">Delete Post</a>
    </div>
  </div>
</div>
{{/each}}

<script src="/js/create-post.js"></script>
<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>